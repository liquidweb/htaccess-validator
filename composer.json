{
    "name": "liquidweb/htaccess-validator",
    "description": "Lint and validate Apache2 Htaccess files",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Grunwell",
            "homepage": "https://stevegrunwell.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^5.6||^7.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "LiquidWeb\\HtaccessValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "test": "@test:all",
        "test:all": [
            "@test:unit",
            "@test:standards"
        ],
        "test:standards": [
            "phpcs"
        ],
        "test:unit": [
            "phpunit --testdox --color=always"
        ]
    },
    "scripts-descriptions": {
        "test": "Execute all automated tests (alias of test:all).",
        "test:all": "Execute all automated tests.",
        "test:standards": "Validate project code against coding standards.",
        "test:unit": "Run the PHPUnit test suite."
    },
    "bin": [
        "bin/validate-htaccess"
    ]
}
